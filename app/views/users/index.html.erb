<h1 class="mb-4 text-primary">Usuários</h1>
<div class="row g-3">
  <% @users.each do |user| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card shadow-sm h-100 border-info">
        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title"><%= link_to user.name || user.email, user_path(user), class: 'fw-bold text-decoration-none text-dark' %></h5>
          <div class="mt-2">
            <% if current_user.followings.include?(user) %>
              <span class="badge bg-success">Seguindo</span>
            <% elsif current_user.sent_follow_requests.exists?(receiver: user, status: 'pending') %>
              <span class="badge bg-warning text-dark">Solicitação pendente</span>
            <% elsif current_user.received_follow_requests.exists?(requester: user, status: 'pending') %>
              <%= button_to 'Aceitar', accept_follow_requests_path(requester_id: user.id), method: :post, class: 'btn btn-outline-success btn-sm me-2' %>
              <%= button_to 'Rejeitar', reject_follow_requests_path(requester_id: user.id), method: :post, class: 'btn btn-outline-danger btn-sm' %>
            <% else %>
              <%= button_to 'Seguir', follow_requests_path(receiver_id: user.id), method: :post, class: 'btn btn-outline-primary btn-sm' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
