<h1>Perfil de <%= @user.name || @user.email %></h1>
<img src="<%= @user.profile_image_url %>" alt="Foto de perfil" width="100" height="100">
<p>Email: <%= @user.email %></p>
<% if @user.name.present? %>
  <p>Nome: <%= @user.name %></p>
<% end %>

<h2>Postagens</h2>
<ul>
  <% @user.posts.order(created_at: :desc).each do |post| %>
    <li>
      <%= link_to(post.content.truncate(30), post_path(post)) %> (<%= post.created_at.strftime('%d/%m/%Y') %>)
    </li>
  <% end %>
</ul>
