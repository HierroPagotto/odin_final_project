<h2 class="mb-4 text-primary text-center">Alterar Senha</h2>
<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-6">
    <div class="card shadow-sm p-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="mb-3">
          <%= f.label :password, "Nova senha", class: 'form-label' %>
          <% if @minimum_password_length %>
            <em class="text-muted">(<%= @minimum_password_length %> caracteres mÃ­nimo)</em>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirme a nova senha", class: 'form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="d-grid">
          <%= f.submit "Alterar senha", class: 'btn btn-success' %>
        </div>
      <% end %>
      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
